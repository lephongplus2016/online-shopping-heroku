<% include template/header %>

<%  locals_dulieu.sanpham.forEach(function(motsp)  {  %>
<%  if(motsp.id == idsp) { %>

        <!-- lead -->
        <div class="ish-row ish-fullrow ish-lead">
            <span class="ish-lead__caption ish-icon-up"><%=motsp.title%></span>
            <div class="ish-lead__image">
                <img src=  <%=  motsp.bigImages %>  alt="wawererly design">
            </div>
            <h1 class="ish-lead__headline">
				<span class="ish-lead__headline-inner"><%=motsp.title%><br>Rẻ nhất sài gòn</span>
            </h1>
        </div>
        <!-- lead end -->



        <!-- content -->
        <div class="ish-row ish-content">

            <div class="ish-col-xs-12 ish-col-sm-4 ish-last-xs ish-first-sm ish-content__sidebar">

                <!-- side content -->
                <p>
                    <%=   motsp.des  %>
                </p>
                <p>
                    <%=   motsp.comment  %>
                </p>

                <ul class="ish-sidebar-mdata post-meta">
                    <li class="ish-sidebar-mdata__item">
                        <strong class="ish-sidebar-mdata__title post-meta-key">Brand</strong>
                        <%= motsp.brand %>
                    </li>
                    <li class="ish-sidebar-mdata__item">
                        <strong class="ish-sidebar-mdata__title post-meta-key">Work Done</strong>
                        Website, Logotype, Visual Identity
                    </li>
                    <li class="ish-sidebar-mdata__item">
                        <strong class="ish-sidebar-mdata__title post-meta-key">Category</strong>
                        <a href="#">Website</a>
                    </li>
                    <li class="ish-sidebar-mdata__item">
                        <strong class="ish-sidebar-mdata__title post-meta-key">Link</strong>
                        <a href=<%= motsp.link %> target="_blank">click me</a>
                    </li>
                </ul>

                <hr>

                <div class="ish-sidebar-share">
                    <strong class="ish-sidebar-share__desc">Share</strong>
                    <ul class="ish-sidebar-share__list">
                        <li class="ish-sidebar-share__list-item">
                            <a href="#" class="ish-sidebar-share__list-link ish-sc-el ish-sc-icon ish-icon-facebook ish--tc3"></a>
                        </li>
                        <li class="ish-sidebar-share__list-item">
                            <a href="#" class="ish-sidebar-share__list-link ish-sc-el ish-sc-icon ish-icon-behance ish--tc3"></a>
                        </li>
                        <li class="ish-sidebar-share__list-item">
                            <a href="#" class="ish-sidebar-share__list-link ish-sc-el ish-sc-icon ish-icon-dribbble ish--tc3"></a>
                        </li>
                        <li class="ish-sidebar-share__list-item">
                            <a href="#" class="ish-sidebar-share__list-link ish-sc-el ish-sc-icon ish-icon-twitter ish--tc3"></a>
                        </li>
                    </ul>
                </div>

                <hr>

                <ul class="ish-prev-next">
                    <li class="ish-prev-next__item ish-prev-next--left">
                        <a class="ish-prev-next__link" href="chitiet.html">Previous</a>
                        <span class="ish-prev-next__icon ish-icon-left"></span>
                    </li>
                    <li class="ish-prev-next__item ish-prev-next--right">
                        <a class="ish-prev-next__link" href="chitiet.html">Next</a>
                        <span class="ish-prev-next__icon ish-icon-right"></span>
                    </li>
                </ul>
                <!-- side content end -->

            </div>

        
            

            <div class="ish-col-xs-12 ish-col-sm-7 ish-col-sm-offset-1 ish-content__main">
                <% motsp.productImages.forEach(function(img){ %>
                <!-- main content -->
                <a class="ish-image ish-lightbox" href= <%= img %>  >
                    <img class="ish-image__image" src=<%= img %> alt="logotype design">
                    <span class="ish-image__caption">Hình ảnh sản phâm</span>
                </a>
               
                <!-- main content end -->
                <%   })   %>
            </div>

           

        </div>
        <!-- content end -->

        <%	} })	%>


        <!--Hien thi danh sach da xem-->
    </br>
    <h4>Sản phẩm đã xem</h4>

    <div class="ish-row ish-content ish-portfolio ish-macy">
        <% 	danhSachSP.forEach(function(idOfList)  {	%>


                <% 	locals_dulieu.sanpham.forEach(function(motsp)  {	
                        if(motsp.id == idOfList && motsp.id != idsp ) {      %>

			<a class="ish-portfolio-item ish--tc13 ish-portfolio-<%= motsp.brand %> " href="chi-tiet.<%= motsp.routerSEO  %>.<%= motsp.id %>">
				<div class="ish-portfolio-item__image-container">
					<img class="ish-portfolio-item__image" src= <%= motsp.bigImages %>  alt="business cards">
				</div>
				<div class="ish-portfolio-item__desc">
					<span class="ish-portfolio-item__title"> <%=  motsp.title  %> </span>
					<span class="ish-portfolio-item__subtitle"><%=motsp.brand%></span>
				</div>
			</a>

			<% }      }) 
                	

             })   %>
            </div>

<%  include template/footer %>